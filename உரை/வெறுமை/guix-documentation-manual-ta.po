#. type: cindex
#: guix-git/doc/guix.texi:46529
#, no-wrap
msgid "HTTPS, certificates"
msgstr ""

#. type: cindex
#: guix-git/doc/guix.texi:46530
#, no-wrap
msgid "X.509 certificates"
