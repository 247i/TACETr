#: guix-git/doc/guix.texi:43996
#, no-wrap
msgid "Virtual File System mapping"
msgstr ""

#. type: cindex
#: guix-git/doc/guix.texi:43997
#, no-wrap
msgid "bind mounts, service"
msgstr ""

#. type: cindex
