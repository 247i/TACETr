#: guix-git/doc/guix.texi:37036
#, no-wrap
msgid "{Data Type} xvnc-configuration"
msgstr ""

#. type: deftp
#: guix-git/doc/guix.texi:37038
msgid "Available @code{xvnc-configuration} fields are:"
msgstr ""

#. type: item
