msgstr ""

#. type: defvar
#: guix-git/doc/guix.texi:25452
#, no-wrap
msgid "startx-command-service-type"
msgstr ""

#. type: defvar
#: guix-git/doc/guix.texi:25454
msgid "Add @command{startx} to the system profile putting it onto @env{PATH}."
msgstr ""

#. type: defvar
#: guix-git/doc/guix.texi:25458 guix-git/doc/guix.texi:51853
