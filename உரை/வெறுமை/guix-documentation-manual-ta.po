"     (service nfs-service-type (nfs-configuration))\n"
"     (service autofs-service-type\n"
"              (autofs-configuration\n"
"               (mounts\n"
"                (list\n"
"                 (autofs-indirect-map\n"
"                  (mount-point \"/net/home\")\n"
"                  (entries\n"
"                   (list\n"
"                    ;; Accessing /net/home/foo will mount\n"
"                    ;; big.network.server:/home/foo.\n"
"                    (autofs-map-entry\n"
"                     (type \"nfs\")\n"
"                     (device \"big.network.server:/home/&\")\n"
"                     (mount-point \"*\"))))))))))\n"
"    %base-services)))\n"
msgstr ""

