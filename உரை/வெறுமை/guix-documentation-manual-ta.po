#. type: item
#: guix-git/doc/guix.texi:24468
#, no-wrap
msgid ""
"@code{kites} (default: "
"@code{'(\"http:@@kitename:localhost:80:@@kitesecret\")})"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:24471
