#: guix-git/doc/guix.texi:40057
#, no-wrap
msgid "@code{unix-sock-rw-perms} (default: @code{\"0770\"}) (type: string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:40061
msgid ""
"UNIX socket permissions for the R/W socket.  Default allows only root.  If "
"PolicyKit is enabled on the socket, the default will change to allow "
"everyone (e.g., @code{\"0777\"})."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:40062
#, no-wrap
msgid "@code{unix-sock-admin-perms} (default: @code{\"0777\"}) (type: string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:40066
