#. type: table
#: guix-git/doc/guix.texi:36673 guix-git/doc/guix.texi:36693
msgid "Example usage:"
msgstr ""

#. type: example
#: guix-git/doc/guix.texi:36675
#, no-wrap
msgid "herd reload dnsmasq\n"
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:36677
#, no-wrap
msgid "stats"
msgstr ""

#. type: table
