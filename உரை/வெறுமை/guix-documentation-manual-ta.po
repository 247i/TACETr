#. type: cindex
#: guix-git/doc/guix.texi:22780
#, no-wrap
msgid "USB_ModeSwitch"
msgstr ""

#. type: cindex
#: guix-git/doc/guix.texi:22781
#, no-wrap
msgid "Modeswitching"
msgstr ""

#. type: defvar
#: guix-git/doc/guix.texi:22783
#, no-wrap
msgid "usb-modeswitch-service-type"
msgstr ""

#. type: defvar
#: guix-git/doc/guix.texi:22788
