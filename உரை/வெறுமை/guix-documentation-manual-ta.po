msgid ""
"Interval (in seconds) for reporting the job status and log to the Forgejo "
"server."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:38522
#, no-wrap
msgid "@code{data-directory} (default: @code{\"/var/lib/forgejo-runner\"})"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:38525
msgid ""
"Directory where @command{forgejo-runner} will store persistent data such as "
"its configuration and access token."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:38526
#, no-wrap
msgid "@code{run-directory} (default: @code{\"/var/run/forgejo-runner\"})"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:38528
msgid "Directory where @command{forgejo-runner} stores cached data."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:38529
#, no-wrap
msgid "@code{log-file} (default: @code{\"/var/log/forgejo-runner.log\"})"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:38531
