#, no-wrap
msgid "@code{package} (default: @code{hostapd})"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:22900
msgid "The hostapd package to use."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:22901
#, no-wrap
msgid "@code{interface} (default: @code{\"wlan0\"})"
msgstr ""

#. type: table
