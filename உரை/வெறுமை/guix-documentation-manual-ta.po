#: guix-git/doc/guix.texi:31022
#, no-wrap
msgid "@code{options} (type: ngircd-options)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31025
msgid ""
"The ngircd-options record object used to specify optional features and "
"configuration options."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31026
#, no-wrap
msgid "@code{ssl} (type: maybe-ngircd-ssl)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31028
msgid "The ngircd-ssl record object used to specify the SSL-related options."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31029
#, no-wrap
msgid "@code{operators} (type: maybe-list-of-ngircd-operators)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31031
msgid ""
"A list of ngircd-operator record objects used to specify the operators."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31032
#, no-wrap
msgid "@code{servers} (type: maybe-list-of-ngircd-servers)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31035
msgid ""
"A list of ngircd-server record objects used to specify other remote servers "
"to connect to."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31036
#, no-wrap
msgid "@code{channels} (type: maybe-list-of-ngircd-channels)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31039
msgid ""
"A list of ngircd-channels record objects specifying pre-defined channels to "
"be created by the server when starting up."
msgstr ""

#. type: deftp
#: guix-git/doc/guix.texi:31049
#, no-wrap
msgid "{Data Type} ngircd-global"
msgstr ""

#. type: deftp
#: guix-git/doc/guix.texi:31051
msgid "Available @code{ngircd-global} fields are:"
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31053 guix-git/doc/guix.texi:39229
#: guix-git/doc/guix.texi:39726
#, no-wrap
msgid "@code{name} (type: maybe-string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31059
msgid ""
"Server name in the IRC network.  This is an individual name of the IRC "
"server, it is not related to the DNS host name.  It must be unique in the "
"IRC network and must contain at least one dot (@samp{.}) character.  When "
"not set, ngIRCd tries to deduce a valid IRC server name from the local host "
"name."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31060
#, no-wrap
msgid "@code{admin-info-1} (type: maybe-string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31062
msgid "First administrator information."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31063
#, no-wrap
msgid "@code{admin-info-2} (type: maybe-string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31065
msgid "Second administrator information."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31066
#, no-wrap
msgid "@code{admin-email} (type: maybe-string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31068
msgid "Email to reach administrators."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31069
#, no-wrap
msgid "@code{help-file} (type: maybe-file-like)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31071
msgid "File-like containing the ngIRCd help text."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31072
#, no-wrap
msgid "@code{info} (type: maybe-string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31075
msgid ""
"Info text of the server.  This will be shown by WHOIS and LINKS requests for"
" example."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31076
#, no-wrap
msgid "@code{listen} (default: @code{(\"::\" \"0.0.0.0\")}) (type: list-of-strings)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31079
msgid ""
"A list of IP address on which the server should listen.  By default it "
"listens on all configured IP addresses and interfaces."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31080
#, no-wrap
msgid "@code{motd-file} (type: file-like)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31083
msgid ""
"Text file with the @i{message of the day} (MOTD).  This message will be "
"shown to all users connecting to the server."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31084
#, no-wrap
msgid "@code{motd-phrase} (type: maybe-string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31087
msgid ""
"A simple phrase (<127 chars) to use if you don't want to use a MOTD file."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31088
#, no-wrap
msgid "@code{network} (type: maybe-string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31092
msgid ""
"The name of the IRC network to which this server belongs.  This name is "
"optional, should only contain ASCII characters, and can't contain spaces.  "
"It is only used to inform clients."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31093
#, no-wrap
msgid "@code{password} (type: maybe-string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31097
msgid ""
"Global password or all users needed to connect to the server.  By default, "
"no password is required.  PAM must be disabled for this option to have an "
"effect."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31098
#, no-wrap
msgid ""
"@code{pid-file} (default: @code{\"/run/ngircd/ngircd.pid\"}) (type: string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31100
msgid ""
"The file name where the PID of ngIRCd should be written after it starts."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31101
#, no-wrap
msgid "@code{ports} (default: @code{(6667)}) (type: list-of-ports)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31104
msgid ""
"Port number(s) on which the server should listen for @emph{unencrypted} "
"connections."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31105
#, no-wrap
msgid "@code{server-uid} (default: @code{\"ngircd\"}) (type: string-or-number)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31107
msgid "The user that the @command{ngircd} command should run as."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31108
#, no-wrap
msgid "@code{server-gid} (default: @code{\"ngircd\"}) (type: string-or-number)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31110
msgid "The group that the @command{ngircd} command should run as."
msgstr ""

#. type: deftp
#: guix-git/doc/guix.texi:31120
#, no-wrap
msgid "{Data Type} ngircd-limits"
msgstr ""

#. type: deftp
#: guix-git/doc/guix.texi:31122
msgid "Available @code{ngircd-limits} fields are:"
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31124
#, no-wrap
msgid "@code{connect-retry} (default: @code{60}) (type: maybe-number)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31127
msgid ""
"The number of seconds the server should wait before re-attempting to "
"establish a link to not yet (or no longer) connected servers."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31128
#, no-wrap
msgid "@code{max-connections} (default: @code{0}) (type: maybe-number)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31131
msgid ""
"Maximum number of simultaneous in- and outbound connections the server is "
"allowed to accept.  There is no limit by default."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31132
#, no-wrap
msgid "@code{max-connections-ip} (default: @code{5}) (type: maybe-number)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31136
msgid ""
"Maximum number of simultaneous connections from a single IP address that the"
" server will accept.  This configuration options lowers the risk of denial "
"of service attacks (DoS).  Set to 0 to remove the limit."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31137
#, no-wrap
msgid "@code{max-joins} (default: @code{10}) (type: maybe-number)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31140
msgid ""
"Maximum number of channels a user can be member of.  Set to 0 to remove the "
"limit."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31141
#, no-wrap
msgid "@code{max-list-size} (default: @code{100}) (type: maybe-number)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31143
msgid "Maximum number of channels returned in response to a LIST command."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31144
#, no-wrap
msgid "@code{ping-timeout} (default: @code{120}) (type: maybe-number)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31147
msgid ""
"Number of seconds of inactivity after which the server will send a PING to "
"the peer to test whether it is alive or not."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31148
#, no-wrap
msgid "@code{pong-timeout} (default: @code{20}) (type: maybe-number)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31151
msgid ""
"If a client fails to answer a PING with a PONG within this amount of "
"seconds, it will be disconnected by the server."
msgstr ""

#. type: deftp
#: guix-git/doc/guix.texi:31161
#, no-wrap
msgid "{Data Type} ngircd-options"
msgstr ""

#. type: deftp
#: guix-git/doc/guix.texi:31163
msgid "Available @code{ngircd-options} fields are:"
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31165
#, no-wrap
msgid ""
"@code{allowed-channel-types} (default: @code{\"#&+\"}) (type: maybe-string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31169
msgid ""
"List of allowed channel types (channel prefixes) for newly created channels "
"on the local server.  By default, all supported channel types are allowed."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31170
#, no-wrap
msgid "@code{allow-remote-oper?} (default: @code{#f}) (type: maybe-boolean)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31174
msgid ""
"If this option is active, IRC operators connected to remote servers are "
"allowed to control this local server using administrative commands, for "
"example like CONNECT, DIE, SQUIT, etc."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31175
#, no-wrap
msgid "@code{connect-ipv4?} (default: @code{#t}) (type: maybe-boolean)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31178
msgid ""
"Set to @code{#f} to prevent ngIRCd from connecting to other IRC servers "
"using the IPv4 protocol, allowed by default."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31179
#, no-wrap
msgid "@code{connect-ipv6?} (default: @code{#t}) (type: maybe-boolean)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31182
msgid ""
"Set to @code{#f} to prevent ngIRCd from connecting to other IRC servers "
"using the IPv6 protocol, allowed by default."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31183
#, no-wrap
msgid "@code{dns?} (default: @code{#t}) (type: maybe-boolean)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31187
msgid ""
"Set to @code{#f} to disable DNS lookups when clients connect.  If you "
"configure the daemon to connect to other servers, ngIRCd may still perform a"
" DNS lookup if required."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31188
#, no-wrap
msgid "@code{more-privacy?} (default: @code{#f}) (type: maybe-boolean)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31196
msgid ""
"Set this to @code{#t} to have ngIRCd censor user idle time, logon time as "
"well as the PART/QUIT messages (that sometimes used to inform everyone about"
" which client software is being used).  WHOWAS requests are also silently "
"ignored, and NAMES output doesn't list any clients for non-members.  This "
"option is most useful when ngIRCd is being used together with anonymizing "
"software such as TOR or I2P and one does not wish to make it too easy to "
"collect statistics on the users."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31197
#, no-wrap
msgid ""
"@code{notice-before-registration?} (default: @code{#f}) (type: maybe-"
"boolean)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31201
msgid ""
"Normally ngIRCd doesn't send any messages to a client until it is "
"registered.  Enable this option to let the daemon send @samp{NOTICE *} "
"messages to clients while connecting."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31202
#, no-wrap
msgid "@code{oper-can-use-mode?} (default: @code{#f}) (type: maybe-boolean)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31205
msgid ""
"Should IRC Operators be allowed to use the MODE command even if they are "
"not(!) channel-operators?"
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31206
#, no-wrap
msgid "@code{oper-chan-p-auto-op?} (default: @code{#t}) (type: maybe-boolean)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31208
msgid "Should IRC Operators get AutoOp (+o) in persistent (+P) channels?"
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31209
#, no-wrap
msgid "@code{oper-server-mode?} (default: @code{#f}) (type: maybe-boolean)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31215
msgid ""
"If @code{open-can-use-mode?} is @code{#t}, this may lead the compatibility "
"problems with servers that run the ircd-irc2 software.  This option masks "
"mode requests by non-chanops as if they were coming from the server.  Only "
"enable this if you have ircd-irc2 servers in your IRC network."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31216
#, no-wrap
msgid "@code{pam?} (default: @code{#f}) (type: boolean)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31223
msgid ""
"Set to @code{#t} to enable calls to the PAM library at runtime; all users "
"connecting without password are allowed to connect, all passwords given will"
" fail.  Users identified without PAM are registered with a tilde (@samp{~}) "
"prepended to their user name.  This defaults to @code{#f} in Guix because "
"the service runs as an unprivileged user and thus cannot authenticate other "
"users via the @code{pam_unix} PAM module."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31224
#, no-wrap
msgid "@code{pam-is-optional?} (default: @code{#f}) (type: maybe-boolean)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31229
msgid ""
"Set to @code{#t} to make PAM authentication optional, causing clients not "
"sending a password to still be able to connect, but won't become identified "
"and keep the tilder (@samp{~}) character prepended to their supplied user "
"name."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31230
#, no-wrap
msgid "@code{require-auth-ping?} (default: @code{#f}) (type: maybe-boolean)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31234
msgid ""
"Set to @code{#t} to have ngIRCd send an authentication PING when a new "
"client connects, and register this client only after receiving the "
"corresponding PONG reply."
msgstr ""

#. type: deftp
#: guix-git/doc/guix.texi:31244
#, no-wrap
msgid "{Data Type} ngircd-ssl"
msgstr ""

#. type: deftp
#: guix-git/doc/guix.texi:31246
msgid "Available @code{ngircd-ssl} fields are:"
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31248
#, no-wrap
msgid "@code{cert-file} (type: maybe-string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31250
msgid "SSL certificate file of the private server key."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31251
#, no-wrap
msgid "@code{key-file} (type: maybe-string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31254
msgid ""
"File name of the SSL Server Key to be used for SSL connections, which is "
"required for SSL/TLS support."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31255
#, no-wrap
msgid ""
"@code{ca-file} (default: @code{\"/etc/ssl/certs/ca-certificates.crt\"}) "
"(type: maybe-string)"
msgstr ""

#. type: table
#: guix-git/doc/guix.texi:31258
msgid ""
"A file listing all the certificates of the trusted Certificate Authorities."
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:31259
#, no-wrap
msgid "@code{ports} (type: maybe-list-of-ports)"
