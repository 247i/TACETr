#: guix-git/doc/guix.texi:31003
#, no-wrap
msgid "{Data Type} ngircd-configuration"
msgstr ""

#. type: deftp
#: guix-git/doc/guix.texi:31005
msgid "Available @code{ngircd-configuration} fields are:"
msgstr ""

