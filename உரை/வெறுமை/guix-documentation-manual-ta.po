#: guix-git/doc/guix.texi:23889
#, no-wrap
msgid "@code{untrusted?} (default: @code{#f})"
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:23890
#, no-wrap
msgid "@code{remote-gui-port} (default: @code{0})"
msgstr ""

#. type: item
#: guix-git/doc/guix.texi:23891
