#. type: example
#: guix-git/doc/guix-cookbook.texi:5584
#, no-wrap
msgid ""
"# Thanks <https://github.com/direnv/direnv/issues/73#issuecomment-152284914>\n"
"export_function()\n"
"@{\n"
"  local name=$1\n"
"  local alias_dir=$PWD/.direnv/aliases\n"
"  mkdir -p \"$alias_dir\"\n"
"  PATH_add \"$alias_dir\"\n"
"  local target=\"$alias_dir/$name\"\n"
"  if declare -f \"$name\" >/dev/null; then\n"
"    echo \"#!$SHELL\" > \"$target\"\n"
"    declare -f \"$name\" >> \"$target\" 2>/dev/null\n"
"    # Notice that we add shell variables to the function trigger.\n"
"    echo \"$name \\$*\" >> \"$target\"\n"
"    chmod +x \"$target\"\n"
"  fi\n"
"@}\n"
"\n"
msgstr ""
"# நன்றி <https://github.com/direnv/direnv/issues/73#issuecomment-152284914> \n"
"ஏற்றுமதி_செயல்பாடு() \n"
"@{ \n"
"உள்ளக பெயர்=$1 \n"
"உள்ளக மாற்று_dir=$PWD/.direnv/aliases \n"
"mkdir -p \"$alias_dir\" \n"
"PATH_சேர் \"$alias_dir\" \n"
"உள்ளக இலக்கு=\"$alias_dir/$name\" \n"
"அறிவித்தால் -f \"$name\" >/dev/null; பிறகு \n"
"எதிரொலி \"#!$SHELL\" > \"$target\" \n"
"declare -f \"$name\" >> \"$target\" 2>/dev/null \n"
"# செயல்பாடு தூண்டுதலில் செல் மாறிகளைச் சேர்ப்பதைக் கவனியுங்கள். \n"
"எதிரொலி \"$பெயர் \\$*\" >> \"$இலக்கு\" \n"
"chmod +x \"$target\" \n"
"fi \n"
"@}\n"
"\n"

