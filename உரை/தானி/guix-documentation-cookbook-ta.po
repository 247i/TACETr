#: guix-git/doc/guix-cookbook.texi:3864
#, ignore-same, no-wrap
msgid ""
"$ guix shell --container --network --manifest=manifest.scm -- R\n"
"\n"
msgstr ""
"$ guix ஓடு --container --network --manifest=manifest.scm -- R\n"
"\n"

